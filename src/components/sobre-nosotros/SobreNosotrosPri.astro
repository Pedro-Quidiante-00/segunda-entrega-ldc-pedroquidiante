---
import {Image} from "astro:assets"
const {titulo, desc, imagen, boton} = Astro.props
---
<section class="flex items-center py-auto justify-center py-10 px-4 sm:py-16 sm:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 max-w-6xl w-full gap-8 lg:gap-16">
        <div class="flex-1 flex flex-col justify-center order-2 lg:order-1">
            <h2 class="titulos-gen">{titulo}</h2>
            <p class="text-justify text-black leading-relaxed text-lg mb-4">{desc}</p>
            <a href="/sobre-nosotros" class="flex bg-red-600 justify-center text-white rounded-full py-2 hover:underline">{boton}</a>
        </div>
        <div class="flex justify-center w-full order-1 lg:order-2">
            <div class="w-full h-64 sm:h-80 md:h-96 rounded-2xl border-2 border-red-600 flex items-center justify-center overflow-hidden">
                <Image src={imagen} alt="estudiando tocando instrumentosa" class="w-full h-full object-cover"/>
            </div>
        </div>
    </div>
</section>