---
import encargados from "../../data/encargados.json"
const {personalCRA} = encargados;

const tituloSeccion = "Encargadas";
const subtituloSeccion = "Nuestro equipo dedicado al servicio de la comunidad educativa";
---
<section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="titulos-gen">{tituloSeccion}</h2>
            <p class="text-lg text-black">{subtituloSeccion}</p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {personalCRA.map((encargado) => (
                    <div class="bg-gray-50 p-6 rounded-xl text-center hover:shadow-lg transition-shadow">

                        <div class="w-24 h-24 mx-auto mb-4 bg-red-600 rounded-full flex items-center justify-center">
                            <img src={encargado.imagen} alt={encargado.alt} class="w-full h-full object-cover transition-transform rounded-full" />
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2">{encargado.nombre}</h3>
                        <p class="text-red-600 font-semibold mb-3">{encargado.cargo}</p>
                    </div>
            ))}
        </div>
    </div>
</section>