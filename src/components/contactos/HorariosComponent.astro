---
type Horario = {
    dia: string;
    hora: string;
}
interface Props {
    titulo: string;
    horarios: Horario[];
}
const { titulo, horarios } = Astro.props;
---
<div class="bg-white p-8 rounded-xl shadow-lg z-40">
    <h3 class="text-2xl font-bold text-gray-900 mb-4">{titulo}</h3>

    <div class="space-y-3">
        {horarios.map((horario) => (
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                    <span class="font-medium text-gray-700">{horario.dia}</span>
                    <span class="text-gray-600">{horario.hora}</span>
                </div>
        ))}
    </div>
</div>