---
import Layout from '../../layouts/Layout.astro';
import noticiasBlog from '../../data/blog.json';

export async function getStaticPaths() {
    const { blog } = noticiasBlog;
    return blog.map(articulo => {
        const slug = articulo.enlace.split('/').pop();
        return {
            params: { slug: slug },
            props: { noticia: articulo }
        };
    });
}
const { noticia } = Astro.props;
---
<Layout>
    <section class="py-20 px-8">
        <div class="max-w-6xl mx-auto bg-white px-10 py-10 rounded-lg">
            <div class="w-full h-72 md:h-96 rounded-2xl shadow-lg overflow-hidden mb-8" >
                <img
                        src={noticia.imagen}
                        alt={noticia.alt_imagen}
                        class="w-full h-full object-cover"/>
            </div>
            <span class="text-red-600 text-sm font-semibold mb-3 inline-block">{noticia.categoria}</span>
            <h1 class="text-4xl md:text-5xl font-bold text-black mb-6">
                {noticia.titulo}
            </h1>
            <div
                    class="prose prose-lg max-w-none text-gray-700 leading-relaxed"
                    set:html={noticia.contenido}/>
            <div class="mt-12">
                <a href="/blog" class="text-red-600 font-bold hover:text-red-700 transition-all hover:underline">
                    ‚Üê Volver al Blog
                </a>
            </div>
        </div>
    </section>
</Layout>
